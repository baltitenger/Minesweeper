<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="12"
        android:key="@string/pref_mine_prob"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="Average percentage of mines"
        android:title="Mine probability" />
    <EditTextPreference
        android:defaultValue="12"
        android:key="@string/pref_board_size"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="Set board width and height"
        android:title="Board size" />
    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/pref_propagate_zeroes"
        android:title="Propagate zeroes" />
    <SwitchPreference
        android:defaultValue="true"
        android:dependency="@string/pref_propagate_zeroes"
        android:key="@string/pref_visual_propagation"
        android:title="Visual propagation" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="@string/pref_live_neighbour_count"
        android:title="Live neighbour count" />
</PreferenceScreen>