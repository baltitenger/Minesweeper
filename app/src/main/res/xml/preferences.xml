<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference
        android:defaultValue="false"
        android:key="@string/pref_dark_theme"
        android:title="@string/pref_title_dark_theme"
        android:summary="@string/pref_summary_dark_theme" />

    <EditTextPreference
        android:defaultValue="15"
        android:key="@string/pref_mine_probability"
        android:dialogTitle="@string/pref_title_mine_probability_dialog"
        android:inputType="number"
        android:title="@string/pref_title_mine_probability"
        android:summary="@string/pref_summary_mine_probability" />

    <EditTextPreference
        android:defaultValue="10"
        android:key="@string/pref_board_size"
        android:dialogTitle="@string/pref_title_board_size_dialog"
        android:inputType="number"
        android:title="@string/pref_title_board_size"
        android:summary="@string/pref_summary_board_size" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/pref_propagate_zeroes"
        android:title="@string/pref_title_propagate_zeroes"
        android:summary="@string/pref_summary_propagate_zeroes" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="@string/pref_visual_propagation"
        android:dependency="propagate_zeroes"
        android:title="@string/pref_title_visual_propagation"
        android:summary="@string/pref_summary_visual_propagation" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/pref_double_tap_neighbours"
        android:title="@string/pref_title_double_tap_neighbours"
        android:summary="@string/pref_summary_double_tap_neighbours" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="@string/pref_live_neighbour_count"
        android:title="@string/pref_title_live_neighbour_count"
        android:summary="@string/pref_summary_live_neighbour_count" />

</PreferenceScreen>